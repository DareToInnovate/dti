<body class="signin">

<!-- Preloader -->


<section>
  
    <div class="signinpanel">
        
        <div class="row">
            
            <div class="col-md-7">
                
                <div class="signin-info">
                    <div class="logopanel loginPageLogo">
                        <h1><%= image_tag("Logo_EN.jpg", height:'100', width:'100'); %></h1>
                    </div><!-- logopanel -->
                
                    <div class="mb20"></div>
                
                    <h5><strong>Welcome to DTI App!</strong></h5>
                    <ul>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> Manage Expense(s)</li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> Ability to add more forms and view</li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> View Billing history for Entrepreneur</li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> and much more...</li>
                    </ul>
                    
                </div><!-- signin0-info -->
            
            </div><!-- col-sm-7 -->
            
            <div class="col-md-5">
                
                <form method="post" action="#" class="formStyle" name="form2">
                    <h4 class="nomargin">Sign In</h4>
                    <p class="mt5 mb20">Login to access your account.</p>
                	<select class="form-control" name="userType" id="userType">
                    <option value="">Please select portal</option>
                    <option value="admin">Admin Portal</option>
                    <option value="entrepreneur">Entrepreneur Portal</option>
                    </select>
                    <input type="text" class="form-control uname" id="username" placeholder="Username" />
                    <input type="password" class="form-control pword" id="password" placeholder="Password" />
                    <a href="#"><small>Forgot Your Password?</small></a>
                    <input type="button" class="btn btn-success btn-block login-carrier" id="login" value="Sign In" onClick="checkValidate();">
                    
                </form>
            </div><!-- col-sm-5 -->
            
        </div><!-- row -->
        
        <div class="signup-footer">
            <div class="pull-left">
                &copy; 2015. All Rights Reserved. Dare to Innovate
            </div>
            <div class="pull-right">
                <a href="#" target="_blank">Contact Us</a> &nbsp;|&nbsp; <a href="#" target="_blank">Help</a>
            </div>
        </div>
        
    </div><!-- signin -->
  
</section>
