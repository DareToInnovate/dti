<!DOCTYPE html>
<html>
<head>
    <% if (params.has_key?(:locale))
        if (params[:locale] == :fr) 
            I18n.locale = 'fr'
        else 
            I18n.locale = 'en'
        end
       end
    %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <title><%= t("app_title") %></title>
  <link href="app/css/custom/style.default.css" rel="stylesheet" type="text/css">
  <%= stylesheet_link_tag "custom/style.default" %>
  <%= stylesheet_link_tag "custom/font-awesome.min" %>
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="app/js/html5shiv.js"></script>
  <script src="app/js/respond.min.js"></script>
  <![endif]-->
</head>

<body class="signin">

<!-- Preloader -->


<section>
  
    <div class="signinpanel">
        
        <div class="row">
            
            <div class="col-md-7">
                
                <div class="signin-info">
                    <div class="logopanel loginPageLogo">
                        <h1><%= image_tag("Logo_EN.jpg", height:'100', width:'100'); %></h1>
                    </div><!-- logopanel -->
                
                    <div class="mb20"></div>
                    <h5><strong><%= t("welcome_to_app") %></strong></h5>
                    <ul>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> <%= t("product_selling_point_1") %></li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> <%= t("product_selling_point_2") %></li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> <%= t("product_selling_point_3") %></li>
                        <li><i class="fa fa-arrow-circle-o-right mr5"></i> <%= t("and_much_more") %></li>
                    </ul>
                    
                </div><!-- signin0-info -->
            
            </div><!-- col-sm-7 -->
            
            <div class="col-md-5">
                    <h4 class="nomargin"><%=t("login") %></h4>
                    <p class="mt5 mb20"><%= t("login_to_access_your_account") %></p>
                    <%= form_tag(:action => 'attempt_login') do %>
                
                <%= flash[:notice] %>
			<%= text_field_tag :username, "", class: 'form-control uname', placeholder: 'Username' %>
			<%= password_field_tag(:password, "", class: "form-control pword", placeholder: "Password") %>
                    <a href="#"><small><%= t("forgot_your_password") %></small></a>
                    <%= submit_tag("Sign In", class: "btn btn-success btn-block login-carrier") %>
                <% end %>
            </div><!-- col-sm-5 -->
            
        </div><!-- row -->
        
        <div class="signup-footer">
            <div class="pull-left">
                &copy; <%= t("copyright") %>
            </div>
            <div class="pull-right">
                <a href="#" target="_blank"><%= t("contact_us") %></a> &nbsp;|&nbsp; <a href="#" target="_blank"><%= t("help") %></a>
            </div>
        </div>
        
    </div><!-- signin -->
  
</section>
    
<%= javascript_include_tag("jquery-1.10.2.min") %>
<%= javascript_include_tag("jquery-migrate-1.2.1.min") %>
<%= javascript_include_tag("jquery-ui-1.10.3.min") %>
<%= javascript_include_tag("bootstrap.min") %>
<%= javascript_include_tag("modernizr.min") %>
<%= javascript_include_tag("jquery.sparkline.min") %>
<%= javascript_include_tag("toggles.min") %>
<%= javascript_include_tag("retina.min") %>
<%= javascript_include_tag("jquery.maskedinput.min") %>
<%= javascript_include_tag("jquery.tagsinput.min") %>
<%= javascript_include_tag("bootstrap-wizard.min") %>
<%= javascript_include_tag("jquery.datatables.min") %>
<%= javascript_include_tag("dataTables.responsive.min") %>
<%= javascript_include_tag("wysihtml5-0.3.0.min") %>
<%= javascript_include_tag("bootstrap-wysihtml5") %>
<%= javascript_include_tag("chosen.jquery.min") %>
<%= javascript_include_tag("jquery.validate.min") %>
<%= javascript_include_tag("jquery.turbolinks") %>
<%= javascript_include_tag("custom") %>
</body>
</html>

