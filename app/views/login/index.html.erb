<script src="app/js/chosen.jquery.min.js"></script>
<script src="app/js/jquery.validate.min.js"></script>
<script src="app/js/custom.js"></script>
<script>
var userType = $('select#userType').val(); 
function checkValidate(){
	var username = $('#username').val();
	var password = $('#password').val();
	var userType = $('select#userType').val();
	if(userType == ""){	
		alert("Please select your portal to proceed");
		document.form2.userType.focus();
		return false;
	}
	else if(username == ""){	
		alert("Please enter your Username");
		document.form2.username.focus();
		return false;
	}
	else if(password == ""){	
		alert("Please enter your Password");
		document.form2.password.focus();
		return false;
	}
	
	if(username == "admin" && password == "admin" && userType == "admin"){	
		window.location = 'app/Admin/dashboard.html';
		return false;
	}
	else if(username == "ent" && password == "ent" && userType == "entrepreneur"){	
		window.location = 'app/Entrepreneur/dashboard.html';
		return false;
	}
	else{
		alert('Invalid credentials');
		document.form2.username.focus();
		return false;
	}
	return true;
}
</script>
</body>
</html>

